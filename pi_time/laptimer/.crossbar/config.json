{
    "controller": {},
    "workers": [{
        "type": "router",
        "options": {
            "pythonpath": [".."]
        },
        "realms": [{
            "name": "pi-time",
            "roles": [{
                "name": "anonymous",
                "permissions": [{
                    "uri": "*",
                    "publish": true,
                    "subscribe": true,
                    "call": true,
                    "register": true
                }]
            }]
        }],
        "transports": [{
            "type": "web",
            "endpoint": {
                "type": "tcp",
                "port": 8080
            },
            "paths": {
                "/": {
                    "type": "static",
                    "directory": "../laptimer/web"
                },
                "ws": {
                    "type": "websocket"
                }
            }
        }]
    }, {
        "type": "container",
        "options": {
            "pythonpath": [".."]
        },
        "components": [{
            "type": "class",
            "classname": "laptimer.laptimer.LaptimerAppSession",
            "realm": "pi-time",
            "transport": {
                "type": "websocket",
                "endpoint": {
                    "type": "tcp",
                    "host": "127.0.0.1",
                    "port": 8080
                },
                "url": "ws://127.0.0.1:8080/ws"
            }
        }]
    }]
}
